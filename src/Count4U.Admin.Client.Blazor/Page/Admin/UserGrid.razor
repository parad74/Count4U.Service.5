@page "/usergrid"
@namespace Count4U.Admin.Client.Page
@inherits UserGridBase
@attribute [Authorize(Policy = UserPolicy.IsAdmin)]


<style type="text/css">
    .fa_custom {
        color: #0b960f
    }

    .select_border_color {
        /*    border: 1px solid #0b960f;*/
        border-radius: .1rem;
    }
</style>

@if (_users == null)
{
    <p><em>Loading...</em></p>
}
else if (LocalizationResources == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @if (this._filterResult != null)
    {
        @if (this._filterResult.Successful == SuccessfulEnum.NotSuccessful)
        {
            <div class="d-flex flex-row-reverse">
                <span class="badge badge-danger float-right">@this._filterResult.Error</span>
            </div>
            <div></div>
        }
    }
    <div class="row">
        <div class="col-3"> </div>
        <div class="d-flex flex-row-reverse">
            <div class="input-group mb-3  float-right">
                <div class="input-group-prepend">
                    &nbsp;  &nbsp;
                    @if (IsSearching)
                    {
                        <button class="btn btn-outline-dark btn-sm searchicon disabled" disabled><i class="fa fa-eraser fa-lg"></i></button>
                    }
                    else
                    {
                        <button @onclick="OnClearAsync" class="btn btn-outline-dark btn-sm searchicon" data-toggle="tooltip" data-placement="bottom" title="Clear User Filter"><i class="fa fa-eraser fa-lg"></i></button>
                    }
                </div>
                <input id="filterinput" placeholder="filter is empty" @bind="_filterUserModel.FilterValue" />
                <div class="input-group-append">
                    @if (IsSearching)
                    {
                        <button class="btn btn-success btn-sm  search disabled" disabled><span class="fa fa-spinner fa-spin fa-lg fa-fw"></span>Waiting ...</button>
                    }
                    else
                    {
                        <button @onclick="OnSearchAsync" class="btn btn-outline-success btn-sm search" data-toggle="tooltip" data-placement="bottom" title="Set User Filter"><i class="fa fa-filter fa-lg  fa_custom"></i>&nbsp; &nbsp;Filter</button>

                    }
                    &nbsp;  &nbsp;
                </div>
                <div class="input-group-append">
                    <select class="form-control form-control-sm select_border_color" id="select-customer-param" @bind="@_filterUserModel.FilterSelectByField">
                        @foreach (var sparam in _filterUserModel.FilterSelectParamDictionary)
                        {
                            <option value=@sparam.Key>@sparam.Value</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        @*<div class="col-2"></div>*@
    </div>


    <PagedDataList Data=@_users Prev="Prev" Next="Next" ItemsPerPage="10"
                   OnChangePageClick="OnChangePageNumber">
        <ListTemplate Context="listOfUser">
            <div class="bg-success d-flex justify-content-between mb-2">
                <div class="bg-success p-1 text-white"> &nbsp; Users  &nbsp;</div>
                <div class="bg-success" style="padding-left: 30px;padding-right: 30px;width:132px">
                    <button class="btn btn-success text-white select_border_color btn-sm" style="width:70px" @onclick="@(()=>UserAdd())">
                        <i class="fa fa-plus"></i>&nbsp; &nbsp;<span>Add</span>
                    </button>
                </div>
            </div>
            @*<h6 class="bg-success p-1 text-white">Users</h6>*@
            <table class="table table-bordered table-sm">
                @*<thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Users</th>
                            <th scope="col">Edit</th>
                        </tr>
                    </thead>*@
                <tbody>
                    @listOfUser
                </tbody>
            </table>
        </ListTemplate>
        <ItemTemplate Context="user">
            <tr @key=@user>
                @*<td>@role.RoleID</td>*@
                @*<td>@user.UserID</td>*@
                  <td style="padding-left: 30px;padding-right: 30px;width:200px">@user.Email</td>
                <td style="padding-left: 30px;padding-right: 30px;">@user.CustomerCode</td>
                @*<td>
            <ul class="nav flex-column">
                @foreach (var user in role.Members)
                    {
                    <li @key=@user.UserID>
                        @user.Email
                    </li>
                    }
            </ul>
        </td>*@
                @*<td style="align-content:center;padding-left: 30px;padding-right: 30px">*@
                @*<td style="padding-left: 30px;padding-right: 30px;width:132px">
            <button class="btn btn-outline-danger  btn-sm" style="width:70px" @onclick="@(()=>UserChangePassword(user.UserID))">
                <span>Change Password</span>
            </button>
        </td>*@
                <td style="padding-left: 30px;padding-right: 30px;width:152px">
                    <button class="btn btn-outline-success  btn-sm" style="width:90px" @onclick="@(()=>UserEdit(user.Email))">
                        <span>Edit</span>
                    </button>
                </td>

                <td style="padding-left: 30px;padding-right: 30px;width:132px">
                    <button class="btn btn-outline-danger  btn-sm" style="width:70px" @onclick="@(()=>UserDelete(user.Email))">
                        <span>Delete</span>
                    </button>
                </td>
            </tr>
        </ItemTemplate>
    </PagedDataList>
}


